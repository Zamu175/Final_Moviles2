<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fina_Moviles.Instagram.Views.ListaPage"
             Title="Lista">
    <ContentPage.Content>
        <ListView x:Name="listinstagram">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Imagen}" 
                               Text="{Binding NomUsuario}" 
                               Detail="Seguir"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>